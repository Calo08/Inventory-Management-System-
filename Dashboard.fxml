<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DashboardController">
    <!-- Sidebar -->
    <left>
        <VBox style="-fx-background-color: #2C3E50; -fx-padding: 20;" spacing="10">
            <Label text="Inventory System" style="-fx-text-fill: white; -fx-font-size: 18px;" />
            <Button text="Dashboard" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Products" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Sales" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Suppliers" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Reports" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Logout" style="-fx-background-color: transparent; -fx-text-fill: white;" fx:id="logoutButton" onAction="#handleLogout" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="Dashboard Overview" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <Label text="Stock Levels: 150 Items" />
            <Label text="Today's Sales: $1,250" />
        </VBox>
    </center>
</BorderPane>
